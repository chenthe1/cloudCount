    <import resource="db-nade.xml" /> 
    <import resource="db-base.xml" /> 
    <import resource="db-clientRedis.xml" /> --> 
    <import resource="db-amm.xml" /> 
    <!-- <import resource="dubbo-provider.xml" />  -->
